@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create new Cover type
            </a>
        </div>
        </br></br>
        <table class="table table-bordered table-striped" style="width-100%">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var coverType in Model)
                {
                    <tr>                        
                        <td width="50%">
                            @coverType.Name
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="CoverType" asp-action="Edit" asp-route-id="@coverType.Id"
                               class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            </div>
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin"  asp-controller="CoverType" asp-action="Delete" asp-route-id="@coverType.Id"
                               class="btn btn-primary btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>